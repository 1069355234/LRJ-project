<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lrj.mapper.RoleMapper">
	<!--mybatis ehcache缓存配置 -->
	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 <cache type="org.mybatis.caches.ehcache.LoggingEhcache"
		/> -->
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	<!-- 以下与实体类的中字段一致 -->
	<sql id="selectId">
		id,
		state,
		name,
		roleKey,
		parentId,
		(select name from ly_role r where id = ly_role.parentId) parentName,
		description
	</sql>

	<select id="findRolePage" resultType="com.lrj.entity.RoleFormMap">
		select
		<include refid="selectId" />
		from ly_role
		where 1 = 1
		<if test="name != null and name != ''">
			and name like '%${name}%'
		</if>
		<if test="column != null">
			order by ${column} ${sort}
		</if>
	</select>

	<select id="seletUserRole" resultType="com.lrj.entity.RoleFormMap">
	select
	<include refid="selectId"/>
	 from ly_role
		where ly_role.id
		in (SELECT roleId FROM ly_user_role WHERE
		userId=#{userId})
	</select>

	<select id="findRoleById" resultType="com.lrj.entity.RoleFormMap">
		select
		<include refid="selectId" />
		from ly_role
		where id = ${id}
	</select>
</mapper>